            </div>

            <div class="form-group">
                <label asp-for="CurrencyType" class="control-label"></label>
                <input asp-for="CurrencyType" readonly value="@Model.CurrencyType" class="form-control" />
                <span asp-validation-for="CurrencyType" class="text-danger"></span>
            </div>

            <input asp-for="Quantity" hidden value="0" />


            <div class="form-group">
                <div class="d-flex justify-content-between">
                    <input type="submit" value="Create" class="btn btn-primary mt-2" />
                    <a asp-action="Index" class="btn btn-primary mt-2">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mt-2">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
