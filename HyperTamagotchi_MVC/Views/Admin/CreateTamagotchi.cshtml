@model HyperTamagotchi_MVC.Models.Tamagotchi

@{
    ViewData["Title"] = "CreateTamagotchi";
}

<h1>CreateTamagotchi</h1>

<h4>Tamagotchi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTamagotchi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TamagotchiColor" class="control-label"></label>
                <select asp-for="TamagotchiColor" asp-items="ViewBag.Colors" class="form-control"></select>
                <span asp-validation-for="TamagotchiColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamagotchiType" class="control-label"></label>
                <select asp-for="TamagotchiType" asp-items="ViewBag.Types" class="form-control"></select>
                <span asp-validation-for="TamagotchiType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mood" class="control-label"></label>
                <select asp-for="Mood" asp-items="ViewBag.Moods" class="form-control"></select>
                <span asp-validation-for="Mood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamagotchiStage" class="control-label"></label>
                <select asp-for="TamagotchiStage" asp-items="ViewBag.Stages" class="form-control"></select>
                <span asp-validation-for="TamagotchiStage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" value="404.jpg" />
