@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row">
        <!-- Cart Items Section -->
        <div class="col-lg-8 mb-3">
            <div class="card bg-secondary">
                <div class="card-header bg-secondary">
                    <h4 class="card-title mb-0">Customer Items</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-secondary">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Total Cost</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Cart items will be dynamically loaded depending on what items is in the cart for the custoemr will be added alter-->
                            <tr>
                                <td><img src="~/Assets/Items/Bed.png" alt="Rainbow Tamagotchi" class="img-thumbnail" width="40"></td>
                                <td>Rainbow Tamagotchi & Case</td>
                                <td>S</td>
                                <td><input type="number" class="form-control" value="1" min="1"></td>
                                <td>$15.49</td>
                                <td><button class="btn btn-primary btn-sm">Remove</button></td>
                            </tr>
                            <tr>
                                <td><img src="~/Assets/Items/Toy_Set.png" alt="Glowing Necklace" class="img-thumbnail" width="40"></td>
                                <td>Glowing Necklace</td>
                                <td>1 pc</td>
                                <td><input type="number" class="form-control" value="1" min="1"></td>
                                <td>$12.39</td>
                                <td><button class="btn btn-primary btn-sm">Remove</button></td>
                            </tr>
                            <tr>
                                <td><img src="~/Assets/Tamagotchi/Farmer/Farmer_Adult_Red.png" alt="Tamagotchi Charm" class="img-thumbnail" width="40"></td>
                                <td>Tamagotchi Charm</td>
                                <td>1 pc</td>
                                <td><input type="number" class="form-control" value="1" min="1"></td>
                                <td>$7.29</td>
                                <td><button class="btn btn-primary btn-sm">Remove</button></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-end">
                        <p class="mb-1"><strong>Subtotal:</strong> $35.17</p>
                        <p class="mb-1"><strong>Shipping:</strong> $2.00</p>
                        <p class="mb-1"><strong>Total:</strong> $37.17</p>
                        <button class="btn btn-primary">Confirm and Pay</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Customer Info Section will be fild with the customers informnation later-->
        <div class="col-lg-4 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Customer Info</h4>
                </div>
                <div class="card-body">
                    <p><strong>Customer Name:</strong> Hans Myren Olsson</p>
                    <p><strong>Customer Address:</strong> Fagerlandsvägen 35, Bjästa, 89331</p>
                    <div class="text-center">
                        <img src="~/Assets/Img/logo.png" alt="Tamworld Logo" class="img-fluid" style="max-width: 300px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

