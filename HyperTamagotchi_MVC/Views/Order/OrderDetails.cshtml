@model HyperTamagotchi_MVC.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate
        </dd>
        <dt class="col-sm-2">
            Shipping Date
        </dt>
        <dd class="col-sm-10">
            @Model.ShippingDate
        </dd>
        <dt class="col-sm-2">
            Expected Date
        </dt>
        <dd class="col-sm-10">
            @Model.ExpectedDate
        </dd>
    </dl>
</div>

<h4>Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ShoppingItemId</td>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
<p>
    @if(User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="GetAllOrders" class="btn btn-primary">Back to List</a>        
    }
    @if (User.IsInRole("Customer"))
    {
        <a asp-controller="Order" asp-action="Index" class="btn btn-primary">Back to List</a>
    }    
</p>
